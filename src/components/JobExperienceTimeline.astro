<style>
  .timeline {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    margin-left: -1px;
    background: rgba(var(--accent), 30%);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 20px;
  }

  .timeline-icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, 0);
    background: rgb(var(--accent));
    width: 20px;
    height: 20px;
    border-radius: 50%;
  }

  .timeline-content {
    width: calc(50% - 20px);

    position: relative;
  }

  .timeline-item:nth-child(even) .timeline-content {
    left: 0px;
  }

  .timeline-item:nth-child(odd) .timeline-content {
    left: calc(50% + 20px);
  }
</style>
